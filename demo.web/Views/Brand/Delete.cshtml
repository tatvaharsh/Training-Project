@model Demo.Entity.ViewModel.Brand
@{
    ViewData["Title"] = Model.OperationType;
}

<div id="modalpopup">
</div>
<h1>@Model.OperationType</h1>
<h3>Are you sure you want to delete this?</h3>

<div>

    <dl class="row">
        <dt class="col-sm-2">
            Brand
        </dt>
        <dd class="col-sm-10">
            @Model.BrandName
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.BrandDescription
        </dd>
    </dl>

</div>
<div>
    <button type="button" onclick="deleteProduct(this)" value="@Model.BrandId" class="btn btn-danger">Delete</button>
    | <a asp-action="Index">Back to List</a>
</div>
<script>
    function deleteProduct(element) {

        var id = element.value;

        $.ajax({
            url: "/Brand/ShowDeleteModal",
            data: { 'id': id, 'requestType': "Category" },
            type: "GET",
            dataType: "html",
            success: function (data) {

                $("#modalpopup").html(data);

            },
            error: function () {
                alert("No Projects Found");

            }
        });
    };
</script>